        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RD2"
        mc:Ignorable="d"
        IsHitTestVisible="False"
        BorderBrush="Black"
        Title="Crosshair"
        Height="0"
        WindowStyle="None"
        Width="0"
        Background="{x:Null}"
        ResizeMode ="NoResize"
